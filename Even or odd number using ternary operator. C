#include<stdio.h>
#include<conio.h>
int main()
{
	int no = 0;
	
    printf("\nenter a positive number to cheak wheather is even or odd  =   ");
    scanf("%d",&no);
    
    if (no <= 0)
    {
    	printf("\n invalid input.");
    	goto down;
    }
    
    (no % 2 == 0) ? printf("\n %d is even.",no) : printf("\n %d is odd.",no);
    
down:
    printf("\n thanks");
    
    getch();
    return 0;
}
	
	